<!doctype html>
<html>
    <head>
          <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
          <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <h1 id="sys_branchTitle" class="text-center font-weight-bold">Items</h1>
            </div>
             <div class="row">
                <p><a class="bx bxs-add-to-queue bx-sm mb-2 font-weight-semibold font-size-18" asp-action="Create" asp-controller="Item" >
                    <ion-icon name="add-circle-outline"></ion-icon>
                     Create New Item
                </a></p>
            </div>
            <div class="row">
                <table class="table">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col">Id</th>
                      <th scope="col">Discription</th>
                      <th scope="col">Quantity</th>
                      <th scope="col">Price</th>
                      <th scope="col">Oprations</th>
                    </tr>
                  </thead>
                  <tbody>
                     
                      @foreach(var Item in ViewBag.Items ){

                        <tr>
                          <td>@Item.Id</td>
                          <td>@Item.Discripton</td>
                          <td>@Item.Quantity </td>
                          <td>@Item.Price</td>

                          <td>
                              <div class="row">
                                  <div class="col-sm-6">
                                      <a href="/Item/Edit/@Item.Id">
                                          <ion-icon name="create-outline"></ion-icon>
                                      </a>
                                  </div>
                                  <div class="col-sm-6">
                                     <a href="/Item/Delete/@Item.Id">
                                         <ion-icon name="trash-outline"></ion-icon>
                                     </a>
                                  </div>
                              </div>
                          </td>

                        </tr>
                      }
              </tbody>
            </table>
            </div>
        </div>
    </body>
</html>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
     }